{
  "version":"1.0",

  "safetyPolicy":{
    "readOnly":"yes",
    "statementTimeoutMs":5000,
    "maxRowReturned":200,
    "maxQueryKiloBytes":64
  },

  "databases":[
    {
      "type":"postgres",
      "connectionName":"MyPostgres",
      "host":"localhost",
      "port":5432,
      "username":"postgres",
      "database":"postgres",
      "columnPolicy":{
        "pseudonymize":{
          "deterministic":[
            "users.email",
            "private.users.phone"
          ],
          "randomized":[
            "cards.number"
          ]
        }
      }
    },

    {
      "type":"postgres",
      "connectionName":"AnotherPostgres",
      "host":"localhost",
      "port":5432,
      "username":"postgres",
      "database":"another"
    }
  ]
}
